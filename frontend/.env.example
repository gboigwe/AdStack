# AdStack Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# =====================================
# Network Configuration
# =====================================
# Options: mainnet, testnet, devnet
NEXT_PUBLIC_NETWORK=testnet

# =====================================
# Stacks Configuration
# =====================================
# Your contract deployer address
NEXT_PUBLIC_CONTRACT_ADDRESS=ST1PQHQKV0RJXZFY1DGX8MNSNYVE3VGZJSRTPGZGM

# =====================================
# Reown AppKit (WalletConnect v2)
# =====================================
# Get your project ID at: https://cloud.reown.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# =====================================
# Analytics (Optional)
# =====================================
# Enable/disable analytics tracking
NEXT_PUBLIC_ANALYTICS_ENABLED=false

# Google Analytics 4 Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Mixpanel Project Token
NEXT_PUBLIC_MIXPANEL_TOKEN=

# PostHog API Key
NEXT_PUBLIC_POSTHOG_KEY=

# =====================================
# API Configuration
# =====================================
# Stacks API URL (leave empty to use defaults)
NEXT_PUBLIC_STACKS_API_URL=

# Stacks Blockchain API URL (leave empty to use defaults)
NEXT_PUBLIC_BLOCKCHAIN_API_URL=

# =====================================
# Feature Flags (Optional)
# =====================================
# Enable experimental features
NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=false

# Enable debug mode
NEXT_PUBLIC_DEBUG_MODE=false

# Enable maintenance mode
NEXT_PUBLIC_MAINTENANCE_MODE=false

# =====================================
# Application Settings
# =====================================
# Application name
NEXT_PUBLIC_APP_NAME=AdStack

# Application description
NEXT_PUBLIC_APP_DESCRIPTION=Decentralized Advertising Platform on Stacks

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Support email
NEXT_PUBLIC_SUPPORT_EMAIL=support@adstack.app
